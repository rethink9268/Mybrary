<h2 class="page_header"><%=book.title%></h2>
<div class="book_details">
  <div>
    <img class="book-cover" src="<%=book.coverImagePath%>" alt="" />
    <div class="book_details_btn_grid">
      <a class="btn btn-primary" href="/books/<%=book.id%>/edit">Edit</a>
      <%- include('../partials/deleteForm', {url: `/books/${book.id}`})%>
      <a
        class="btn btn-primary book_details_author_btn"
        href="/authors/<%=book.author.id%>"
        >View Author</a
      >
    </div>
  </div>

  <div class="book_details_grid">
    <div class="book_details_label">Author:</div>
    <div><%=book.author.name%></div>
    <div class="book_details_label">Publish Date:</div>
    <div><%=book.publishDate.toDateString()%></div>
    <div class="book_details_label">Page Count:</div>
    <div><%=book.pageCount%></div>
    <div class="book_details_label">Description:</div>
    <div><%=book.description%></div>
  </div>
</div>
